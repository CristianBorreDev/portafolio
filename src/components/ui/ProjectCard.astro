---
const { title, description, stack, demo, github, image, type } = Astro.props;
---

<article
  class="group relative border border-[#181818] rounded-2xl overflow-hidden bg-[#0d0d12]/70 hover:border-[#7b5cff]/50 hover:shadow-[0_0_20px_rgba(123,92,255,0.1)] transition-all duration-500 flex flex-col backdrop-blur-sm"
>
  <!-- Imagen de portada -->
  <div class="overflow-hidden relative">
    <img
      src={image}
      alt={title}
      loading="lazy"
      class="w-full h-48 object-cover opacity-90 group-hover:opacity-100 group-hover:scale-[1.04] transition-all duration-700"
    />

    <!-- Overlay sutil -->
    <div class="absolute inset-0 bg-gradient-to-t from-[#0d0d12] via-transparent to-transparent opacity-70"></div>

    <!-- Tipo de proyecto -->
    <span
      class="absolute top-3 right-3 text-[10px] tracking-widest uppercase px-3 py-1 bg-[#0a0a0a]/60 text-[#9a85ff] border border-[#1f1f1f] rounded-full"
    >
      {type}
    </span>
  </div>

  <!-- Contenido -->
  <div class="p-6 flex-1 flex flex-col justify-between">
    <div>
      <h3 class="text-lg font-semibold text-[#eaeaea] mb-1">
        {title}
      </h3>
      <p class="text-[#a1a1a1] text-sm mb-4 leading-relaxed">
        {description}
      </p>

      <ul class="flex gap-2 flex-wrap">
        {stack.map((tech: any) => (
          <li
            class="text-xs bg-[#14141a] px-2 py-1 rounded-md text-[#c2c2c2] border border-[#222] font-mono"
          >
            {tech}
          </li>
        ))}
      </ul>
    </div>

    <!-- Enlaces -->
    <div class="mt-6 flex justify-between items-center text-sm">
      <a
        href={demo}
        target="_blank"
        class="flex items-center gap-1 text-[#9a85ff] hover:text-[#eaeaea] transition-colors"
      >
        ðŸ”— <span>Demo</span>
      </a>
      <a
        href={github}
        target="_blank"
        class="flex items-center gap-1 text-[#666] hover:text-[#9a85ff] transition-colors"
      >
        ðŸ“‚ <span>CÃ³digo</span>
      </a>
    </div>
  </div>
</article>
